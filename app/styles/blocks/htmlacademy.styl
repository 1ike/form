.htmlacademy
    position relative
    padding-left 108px
    padding-right 120px
    padding-top 11px
    padding-bottom 30px

    a
        position relative
        display inline-block
        margin-right 14px
        color rgb(1, 79, 152)
        text-decoration none
        box-shadow 0 1px 0 0 rgba(1, 79, 152, 0.25)


        &:after
            position absolute
            top 1px
            left 0px
            content ""
            height 100%
            width 100%
            box-shadow 0 1px 0 0 rgba(1, 79, 152, 0.7)


    &__label
        position relative
        top 2px
        margin-left 12px
        padding-left 36px
        cursor pointer

        input
            display none

            &:checked ~ span
                background url(../images/sprite.png) $html-circle_offset_x $html-circle_offset_y,
                           url(../images/sprite.png) $html-dot_offset_x $html-dot_offset_y

        span
            position absolute
            left 2px
            top 1px
            width 28px
            height 28px
            background url(../images/html-circle.png)

        &:nth-of-type(2) span
            left 3px