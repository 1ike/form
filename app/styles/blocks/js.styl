.skills-range
    clearfix()

    padding-top 21px
    padding-left 119px
    padding-right 70px
    padding-bottom 17px

    &__header
        padding-top 20px
        padding-bottom 23px

    &__pointer
        position absolute
        top -17px
        left 142px
        width 16px
        height 14px
        cursor pointer
        background url(../images/sprite.png) $range-pointer_offset_x $range-pointer_offset_y
    &__scale
        position relative
        width 759px
        height 26px
        margin-top 20px
        margin-left 3px
        margin-bottom 2px
        background url(../images/sprite.png) $range-scale_offset_x $range-scale_offset_y

    &__sign
        float left
        font-size 13px
        line-height 1.462
        cursor pointer

        &:nth-of-type(1)
            width 70px
            padding-left 3px
            margin-top 2px
            margin-right 78px

        &:nth-of-type(2)
            width 170px
            margin-right 57px

        &:nth-of-type(3)
            width 170px
            margin-right 83px

        &:nth-of-type(4)
            width 140px
            margin-top 7px


